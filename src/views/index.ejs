<h1 class="mt-5 mb-4">Jobs</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Company</th>
      <th scope="col">Designation</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th> 
    </tr>
  </thead>
  <tbody>

    

    <% jobs.forEach(job =>{ %>
      <tr>
        <th scope="row">
          <%= job.id %>
        </th>
        <td>
          <%= job.company %>
        </td>
        <td>
          <%= job.designation %>
        </td>
        <td>
          <%= job.desc %>
        </td>
        <td>
          <img src="<%= job.image %>" />
        </td>
        <td>
          <a href="/editJobs/<%= job.id%>" class="btn btn-warning">Update</a>
          <!-- <button href="/deleteJob/<%= job.id%>" class="btn btn-danger" onclick="deleteJob('<%=job.id%>')">Delete</button> -->
          <a href="/deleteJobs/<%= job.id%>" class="btn btn-danger">delete</a>
        </td>
      </tr>
      <% }) %>

  </tbody>
</table>